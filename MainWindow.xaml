<Window x:Class="FlawDetector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:idd="clr-namespace:InteractiveDataDisplay.WPF;assembly=InteractiveDataDisplay.WPF"
        xmlns:local="clr-namespace:FlawDetector"
        Title="Defectoscopy Visualizer" Height="600" Width="800">
    <Grid>
        <idd:Chart x:Name="MyChart">
            <idd:LineGraph x:Name="MainGraph"
                          Stroke="Blue"
                          StrokeThickness="3"
                          Description="Signal Data"/>
        </idd:Chart>
    </Grid>
</Window>